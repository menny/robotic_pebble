<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/rebble_boot_done"
        style="@style/SetupStepDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="✔️ Device is all ready and done." />

    <LinearLayout
        android:id="@+id/rebble_boot_needed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You can now begin to setup your device with rebble. You'll need to start by booting the Pebble app with a special link provided by rebble." />

        <Button
            android:id="@+id/start_rebble_io_boot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Begin setup using Rebble.io..." />
    </LinearLayout>
</merge>